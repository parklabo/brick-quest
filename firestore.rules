rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Jobs collection: clients can read their own jobs, admins can list all, only Admin SDK can write
    match /jobs/{jobId} {
      allow read: if isAdmin()
        || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if false;
    }

    // User profiles: authenticated users can read/write their own, admins can read all
    match /users/{uid} {
      allow read: if isAdmin()
        || (request.auth != null && request.auth.uid == uid);
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Inventories: authenticated users can read/write their own, admins can list all
    match /inventories/{uid} {
      allow read: if isAdmin()
        || (request.auth != null && request.auth.uid == uid);
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
