{
  "name": "brick-quest",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "concurrently -n emu,app -c blue,green \"docker compose up --build emulators\" \"turbo dev\"",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "dev:landing": "turbo dev --filter=@brick-quest/landing",
    "dev:web": "turbo dev --filter=@brick-quest/web",
    "dev:console": "turbo dev --filter=@brick-quest/console",
    "firebase:emulators": "docker compose up --build emulators",
    "firebase:deploy": "firebase deploy --only functions"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.1",
    "turbo": "^2.8.8",
    "typescript": "^5.9.3"
  }
}
